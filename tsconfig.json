{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["src/__test__", "src/*/*.spec.ts"]
}
